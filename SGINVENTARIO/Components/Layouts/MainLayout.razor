<Scripts>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.4/dist/chart.umd.min.js"></script>
    <script src="js/site.js"></script>
</Scripts>

@code {
    private string Title => Navigation.Uri switch
    {
        var uri when uri.EndsWith("/dashboard", StringComparison.OrdinalIgnoreCase) => "Dashboard",
        var uri when uri.Contains("equipos", StringComparison.OrdinalIgnoreCase) => "Equipos",
        var uri when uri.Contains("mantenimientos", StringComparison.OrdinalIgnoreCase) => "Mantenimientos",
        var uri when uri.Contains("movimientos", StringComparison.OrdinalIgnoreCase) => "Movimientos",
        var uri when uri.Contains("areas", StringComparison.OrdinalIgnoreCase) => "츼reas",
        var uri when uri.Contains("plantas", StringComparison.OrdinalIgnoreCase) => "Plantas",
        var uri when uri.Contains("usuarios-persona", StringComparison.OrdinalIgnoreCase) => "Usuarios",
        _ => "Inicio"
    };

    private async Task ToggleSidebar()
    {
        var js = (IJSRuntime?)Context.Services.GetService(typeof(IJSRuntime));
        if (js is not null)
        {
            await js.InvokeVoidAsync("toggleSidebar");
        }
    }
}
