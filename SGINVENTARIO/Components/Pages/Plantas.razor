@page "/plantas"
@attribute [Authorize(Roles = "Admin,Tecnico")]
@inject ApplicationDbContext Db

<h1>Plantas</h1>

<EditForm Model="_planta" OnValidSubmit="GuardarAsync">
    <DataAnnotationsValidator />
    <div class="row g-2 align-items-end">
        <div class="col-md-4">
            <label class="form-label">Nombre</label>
            <InputText class="form-control" @bind-Value="_planta.Nombre" />
        </div>
        <div class="col-md-6">
            <label class="form-label">Dirección</label>
            <InputText class="form-control" @bind-Value="_planta.Direccion" />
        </div>
        <div class="col-md-2">
            <button type="submit" class="btn btn-primary w-100">@(_planta.Id == 0 ? "Agregar" : "Actualizar")</button>
        </div>
    </div>
</EditForm>

@if (!string.IsNullOrEmpty(_mensaje))
{
    <div class="alert alert-info mt-3">@_mensaje</div>
}

<table class="table table-striped mt-3">
    <thead>
        <tr>
            <th>Nombre</th>
            <th>Dirección</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var planta in _plantas)
        {
            <tr>
                <td>@planta.Nombre</td>
                <td>@planta.Direccion</td>
                <td class="text-end">
                    <button class="btn btn-sm btn-outline-primary" @onclick="() => Editar(planta)"><i class="bi bi-pencil"></i></button>
                    <button class="btn btn-sm btn-outline-danger" @onclick="() => Eliminar(planta.Id)"><i class="bi bi-trash"></i></button>
                </td>
            </tr>
        }
    </tbody>
</table>

@code {
    private List<Planta> _plantas = new();
    private Planta _planta = new();
    private string? _mensaje;

    protected override async Task OnInitializedAsync()
    {
        _plantas = await Db.Plantas.OrderBy(a => a.Nombre).ToListAsync();
    }

    private async Task GuardarAsync()
    {
        if (_planta.Id == 0)
        {
            Db.Plantas.Add(_planta);
        }
        else
        {
            Db.Plantas.Update(_planta);
        }

        await Db.SaveChangesAsync();
        _mensaje = "Cambios guardados.";
        _planta = new Planta();
        _plantas = await Db.Plantas.OrderBy(a => a.Nombre).ToListAsync();
    }

    private void Editar(Planta planta)
    {
        _planta = new Planta
        {
            Id = planta.Id,
            Nombre = planta.Nombre,
            Direccion = planta.Direccion
        };
    }

    private async Task Eliminar(int id)
    {
        var entity = await Db.Plantas.FindAsync(id);
        if (entity is null)
        {
            return;
        }

        Db.Plantas.Remove(entity);
        await Db.SaveChangesAsync();
        _plantas = await Db.Plantas.OrderBy(a => a.Nombre).ToListAsync();
    }
}
